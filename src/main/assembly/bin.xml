<?xml version="1.0" encoding="UTF-8"?>
<!--
mvn site:site assembly:assembly package
-->
<assembly xmlns="http://maven.apache.org/ASSEMBLY/2.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/ASSEMBLY/2.0.0 http://maven.apache.org/xsd/assembly-2.0.0.xsd">

    <id>bin</id>

    <formats>
        <format>tar.gz</format>
    </formats>

    <fileSets>
        <fileSet>
            <directory>${basedir}/src/main/sh</directory>
            <outputDirectory>bin</outputDirectory>
            <fileMode>0755</fileMode>
            <directoryMode>0755</directoryMode>
            <includes>
                <include>zeebe-start-project</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>${basedir}/src/main/sh</directory>
            <outputDirectory>etc/systemd/system</outputDirectory>
            <directoryMode>0755</directoryMode>
            <includes>
                <include>zeebe-start-project.service</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>${basedir}/src/main/sh</directory>
            <outputDirectory>etc/systemd/system/zeebe-start-project.service.d</outputDirectory>
            <directoryMode>0755</directoryMode>
            <includes>
                <include>environment.conf</include>
            </includes>
        </fileSet>
    </fileSets>
</assembly>